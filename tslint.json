{
    "defaultSeverity": "error",
    "extends": [
		"tslint:recommended",
		"tslint-react"
	],
    "rules": {
		"quotemark": [true, "single", "jsx-double"],
		"indent": [true, "tabs", 4],
		"newline-before-return": true,
		"no-arg": true,
		"no-any": true,
		"no-angle-bracket-type-assertion": false,
		"semicolon": [true, "always", "ignore-bound-class-methods"],
		"max-line-length": {
			"options": [130]
		}
	}
}